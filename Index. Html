<br><br>

<button onclick="hideimg()">Hide Image</button>

<button onclick="showimg()">Show Image</button>

<script>

function hideimg() {

  document.getElementById("demo").style.display = "none";

}

function showimg() {

  document.getElementById("demo").style.display = "block";

}

</script>

